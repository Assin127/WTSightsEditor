<Window x:Class="WTSightsEditor.Windows.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create/Open Project"
        Height="700"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource ForegroundBrush}">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource AccentBrush}" 
                CornerRadius="4"
                Margin="0,0,0,10"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Welcome to War Thunder Sights Editor"
                           FontSize="18"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="White"/>

                <Button Grid.Column="1"
                        Content="Settings"
                        Style="{StaticResource ModernButton}"
                        Background="Transparent"
                        BorderBrush="White"
                        Foreground="White"
                        Padding="10,5"
                        Click="SettingsButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content Area with Navigation -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Panel -->
            <Border Grid.Column="0"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0"
                    Margin="0,0,10,0">
                <StackPanel>
                    <!-- Welcome/Project Selection View -->
                    <StackPanel x:Name="WelcomePanel" Visibility="Visible">
                        <TextBlock Text="Create or open a project to start editing"
                                   Margin="0,0,0,20"
                                   TextWrapping="Wrap"/>

                        <Button Content="New Project"
                                Style="{StaticResource ModernButton}"
                                Height="40"
                                Margin="0,0,0,10"
                                Click="NewProjectButton_Click"/>

                        <Button Content="Open Project"
                                Style="{StaticResource ModernButton}"
                                Height="40"
                                Margin="0,0,0,20"
                                Click="OpenProjectButton_Click"/>

                        <!-- Recent Projects -->
                        <TextBlock Text="Recent Projects"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>

                        <ListBox x:Name="RecentProjectsList"
                                 Height="150"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               Margin="2"
                                               MouseLeftButtonDown="RecentProject_MouseLeftButtonDown"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock x:Name="NoRecentProjectsText"
                                   Text="No recent projects"
                                   Visibility="Collapsed"
                                   FontStyle="Italic"
                                   Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Project Creation View (initially hidden) -->
                    <StackPanel x:Name="ProjectCreationPanel" Visibility="Collapsed">
                        <Button Content="Back"
                                Style="{StaticResource ModernButton}"
                                Height="30"
                                Margin="0,0,0,20"
                                Click="BackButton_Click"/>

                        <TextBlock Text="Project Setup"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="1"
                          Width="3"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"
                          ShowsPreview="True"/>

            <!-- Right Content Area -->
            <ScrollViewer Grid.Column="2"
                          Style="{StaticResource ModernScrollViewer}">
                <StackPanel>
                    <!-- Welcome Content (default) -->
                    <StackPanel x:Name="WelcomeContent" Visibility="Visible">
                        <TextBlock Text="Welcome to War Thunder Sights Editor!"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="This tool allows you to create and edit custom sights for War Thunder."
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <!-- Features list -->
                        <Border BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Features:"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="• Custom sight editor with visual tools" Margin="5,2"/>
                                <TextBlock Text="• File explorer with datamine integration" Margin="5,2"/>
                                <TextBlock Text="• Ballistic calculator" Margin="5,2"/>
                                <TextBlock Text="• Multi-language support" Margin="5,2"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Project Creation Content (hidden) -->
                    <StackPanel x:Name="ProjectCreationContent" Visibility="Collapsed">
                        <!-- Project Name -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Project Name"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ProjectNameTextBox"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="30"
                                     TextChanged="ProjectNameTextBox_TextChanged"/>
                            <TextBlock x:Name="ProjectNameError"
                                       Foreground="Red"
                                       Visibility="Collapsed"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Game Folder -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Game Folder"
                                           FontWeight="Bold"
                                           Margin="0,0,0,5"/>

                                <TextBlock Grid.Column="1"
                                           Text="*"
                                           Foreground="Red"
                                           FontWeight="Bold"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="GameFolderTextBox"
                                         Grid.Column="0"
                                         Style="{StaticResource ModernTextBox}"
                                         Height="30"
                                         IsReadOnly="True"/>

                                <Button Grid.Column="1"
                                        Content="Browse..."
                                        Style="{StaticResource ModernButton}"
                                        Height="30"
                                        Margin="5,0,0,0"
                                        Click="BrowseGameFolder_Click"/>
                            </Grid>

                            <TextBlock x:Name="GameFolderError"
                                       Foreground="Red"
                                       Visibility="Collapsed"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Optional Folders -->
                        <Expander Header="Optional Folders"
                                  BorderBrush="{StaticResource BorderBrush}"
                                  Margin="0,0,0,15">
                            <StackPanel Margin="10,10,0,0">
                                <!-- Datamine Folder -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Datamine Folder"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="DatamineFolderTextBox"
                                                 Grid.Column="0"
                                                 Style="{StaticResource ModernTextBox}"
                                                 Height="30"/>

                                        <Button Grid.Column="1"
                                                Content="Browse..."
                                                Style="{StaticResource ModernButton}"
                                                Height="30"
                                                Margin="5,0,0,0"
                                                Click="BrowseDatamineFolder_Click"/>
                                    </Grid>

                                    <CheckBox x:Name="AutoUpdateDatamineCheckBox"
                                              Content="Auto-update datamine from network"
                                              Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Data Folder -->
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Data Folder"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="DataFolderTextBox"
                                                 Grid.Column="0"
                                                 Style="{StaticResource ModernTextBox}"
                                                 Height="30"/>

                                        <Button Grid.Column="1"
                                                Content="Browse..."
                                                Style="{StaticResource ModernButton}"
                                                Height="30"
                                                Margin="5,0,0,0"
                                                Click="BrowseDataFolder_Click"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Ballistic Folder -->
                                <StackPanel>
                                    <TextBlock Text="Ballistic Folder"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="BallisticFolderTextBox"
                                                 Grid.Column="0"
                                                 Style="{StaticResource ModernTextBox}"
                                                 Height="30"/>

                                        <Button Grid.Column="1"
                                                Content="Browse..."
                                                Style="{StaticResource ModernButton}"
                                                Height="30"
                                                Margin="5,0,0,0"
                                                Click="BrowseBallisticFolder_Click"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Create Button -->
                        <Button x:Name="CreateProjectButton"
                                Content="Create"
                                Style="{StaticResource ModernButton}"
                                Height="40"
                                Width="120"
                                HorizontalAlignment="Left"
                                IsEnabled="False"
                                Click="CreateProjectButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Margin="0,10,0,0"
                Padding="0,10,0,0">
            <TextBlock Text="War Thunder Sights Editor v1.0"
                       HorizontalAlignment="Center"
                       Opacity="0.7"/>
        </Border>
    </Grid>
</Window>